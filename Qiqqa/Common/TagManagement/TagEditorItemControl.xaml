<Grid x:Class="Qiqqa.Common.TagManagement.TagEditorItemControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Background="Transparent"
>
    <Border Name="ObjRoundingMask" Background="White" CornerRadius="8" />
    <StackPanel Orientation="Horizontal" Name="ObjInnerPanel" Background="{StaticResource Background_Brush_Blue_VeryDark}">
        <StackPanel.OpacityMask>
            <VisualBrush Visual="{Binding ElementName=ObjRoundingMask}"/>
        </StackPanel.OpacityMask>
        <TextBlock Name="TextTag"/>
        <Image Name="ImageClear" Width="24" Height="24"/>
    </StackPanel>
</Grid>
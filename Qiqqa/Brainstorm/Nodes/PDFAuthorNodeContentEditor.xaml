<UserControl x:Class="Qiqqa.Brainstorm.Nodes.PDFAuthorNodeContentEditor"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local_gui="clr-namespace:Utilities.GUI;assembly=Utilities"
  xmlns:commongui="clr-namespace:Qiqqa.Common.GUI"
>
  <FlowDocumentScrollViewer  IsToolBarVisible="False" VerticalScrollBarVisibility="Auto">
    <commongui:StandardFlowDocument>
      
      <Paragraph>
        <Run Text="{Binding Firstnames, Mode=OneWay}" />
        <Run Text="{Binding Surname, Mode=OneWay}" />
      </Paragraph>
      
      <Paragraph>
        Press 'D' to expand all the documents by this author.
      </Paragraph>
    </commongui:StandardFlowDocument>
  </FlowDocumentScrollViewer>
</UserControl>

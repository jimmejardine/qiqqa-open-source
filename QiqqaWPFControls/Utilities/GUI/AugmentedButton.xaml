<Button x:Class="Utilities.GUI.AugmentedButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local_gui="clr-namespace:Utilities.GUI"
    >
  <Grid>
    <DockPanel Name="ObjPanelDetailed">
      <Grid Name="PanelPopupPanel" DockPanel.Dock="Right" Width="20">
        <Image Name="ImagePopupIndicator" Width="8" Height="8"/>
      </Grid>

      <Image Name="ImageIcon" Width="32" Height="32" Visibility="Collapsed" />
      <local_gui:AugmentedSpacer x:Name="ObjSpacer" Visibility="Collapsed" />
      <TextBlock Name="TextCaption" Visibility="Collapsed" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" />
      <Grid Name="GridFiller" />
    </DockPanel>

    <Grid Name="ObjPanelCentered">
      <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Name="TextCaptionCentered" />
    </Grid>
  </Grid>
</Button>
